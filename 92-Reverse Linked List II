class Solution:
    def reverseBetween(self, head: Optional[ListNode], left: int, right: int) -> Optional[ListNode]:
        dummy = ListNode(0,head)
        Leftprev = dummy
        curr = head
        n = right - left
        
        for i in range(left-1):
            Leftprev = curr
            curr = curr.next
        
        prev = None
        
        for i in range(n+1):
            nxt = curr.next
            curr.next = prev
            prev = curr
            curr = nxt
        
        Leftprev.next.next = curr
        Leftprev.next = prev
        return dummy.next
