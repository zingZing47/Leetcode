class Solution:
    def mergeTwoLists(self, list1: Optional[ListNode], list2: Optional[ListNode]) -> Optional[ListNode]:
        result = ListNode()
        cur = result
        
        while list1 and list2: # when list1 and list2 are both not empty
            v1 = list1.val
            v2 = list2.val
            if v1 < v2:
                cur.next = list1
                list1 = list1.next               
            else:
                cur.next = list2
                list2 = list2.next            
            cur = cur.next
            
        if list1: # if list1 still contains values
            cur.next = list1
        if list2: # if list2 still contains values
            cur.next = list2
            
        return result.next
